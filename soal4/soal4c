#include<stdio.h>
#include<stdlib.h>
#include<unistd.h>
#include<sys/types.h>
#include<string.h>
#include<sys/wait.h>

int main() {
  int fd[4];

  pid_t pid;

  pipe(fd);
  pipe(fd+2);

  pid = fork();
  if (pid == 0) {
    dup2(fd[1], 1);
    close(fd[0]);
    close(fd[1]);
    close(fd[2]);
    close(fd[3]);
    char *argv[] = {"ls", NULL};
    execv("/bin/ls", argv);
  }
  while(wait(NULL) > 0);

  pid = fork();
  if (pid == 0) {
    dup2(fd[0], 0);
    //dup2(fd[3], 1);
    close(fd[0]);
    close(fd[1]);
    close(fd[2]);
    close(fd[3]);
    char *argv[] = {"wc", "-l", NULL};
    execv("/usr/bin/wc", argv);
  }
  

}
  
